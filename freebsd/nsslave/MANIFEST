	},

	//////////////////////////////////////////////////// SCRIPTS

	"scripts":{
		"post-install":"
			conf=/usr/local/etc/nsslave.conf
			[ -e $conf ] || cp $conf.sample $conf
		",
		"pre-deinstall":"
			conf=/usr/local/etc/nsslave.conf
			cmp -s $conf.sample $conf && rm -f $conf
		",
	}

